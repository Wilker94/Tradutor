translate_serbian_label.grid(row=14, column=1, padx=(25,0), pady=2, sticky=tk.W)
translate_serbian_text = tk.Label(inicial, wraplength=280)
translate_serbian_text.grid(row=15, column=1, padx=(5,0), pady=2, sticky=tk.W)

